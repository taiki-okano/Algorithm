#include <iostream>
#include <algorithm>
#include <string>
#include <cmath>
#include <vector>
#include <cstdio>
#include <cstring>
#include <cstdlib>

int count[8];
std::string in;

int main(){
    std::cin >> in;
    for(int i = 0; i < in.size(); ++i){
        char c = in[i];
        switch (c) {
            case 'K':
                ++count[0];
                break;
            case 'U':
                ++count[1];
                break;
            case 'P':
                ++count[2];
                break;
            case 'C':
                ++count[3];
                break;
            case 'k':
                ++count[4];
                break;
            case 'u':
                ++count[5];
                break;
            case 'p':
                ++count[6];
                break;
            case 'c':
                ++count[7];
                break;
        }
    }
    
    int ans = 0;
    while (true) {
        bool flag1 = false, flag2 = false;
        for(int i = 0; i < 4; ++i){
            if(count[i] == 0){
                flag1 = true;
                break;
            }
            --count[i];
        }
        if(!flag1)
            ++ans;
        for(int i = 4; i < 8; ++i){
            if(count[i] == 0){
                flag2 = true;
                break;
            }
            --count[i];
        }
        if(!flag2)
            ++ans;
        if(flag1 && flag2)
            break;
        flag1 = false;
        flag2 = false;
    }
    
    std::cout << ans << std::endl;

    return 0;
}
